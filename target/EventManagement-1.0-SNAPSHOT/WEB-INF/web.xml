        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/eventmanagement1</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
